    <!-- Chatbot JavaScript -->
    <script>
        // Get references to chatbot icon and chat window
        const chatbotIcon = document.getElementById('chatbot-icon');
        const chatWindow = document.getElementById('chat-window');
        const sendButton = document.getElementById('send-button');
        const chatMessage = document.getElementById('chat-message');
        const chatContent = document.getElementById('chat-content');

        // Event listener for chatbot icon click
        chatbotIcon.addEventListener('click', () => {
            // Toggle chat window visibility
            if (chatWindow.style.display === 'none' || chatWindow.style.display === '') {
                chatWindow.style.display = 'block';
            } else {
                chatWindow.style.display = 'none';
            }
        });

        const sendMessage = () => {
    const message = chatMessage.value.trim();

    if (message !== '') {
        // Add user message to chat content
        const userMessageElement = document.createElement('p');
        userMessageElement.textContent = 'You: ' + message;
        chatContent.appendChild(userMessageElement);

        // Clear the input field
        chatMessage.value = '';

        // Scroll to the bottom of chat content
        chatContent.scrollTop = chatContent.scrollHeight;

        // Send an AJAX POST request to the server
        fetch('/send-message', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/x-www-form-urlencoded',
            },
            body: `prompt=${encodeURIComponent(message)}`
        })
        .then(response => {
            console.log('Response status:', response.status);
            if (response.ok) {
                return response.json();
            } else {
                console.error('Server error:', response.statusText);
                throw new Error(`Server error: ${response.statusText}`);
            }
        })
        .then(data => {
            console.log('Response data:', data);
            // Display the ChatGPT response in the chat content
            const responseElement = document.createElement('p');
            responseElement.textContent = 'PawBot: ' + data.response;
            chatContent.appendChild(responseElement);

            // Scroll to the bottom of chat content
            chatContent.scrollTop = chatContent.scrollHeight;
        })
        .catch(error => {
            console.error('Fetch error:', error);
        });
    }
};


