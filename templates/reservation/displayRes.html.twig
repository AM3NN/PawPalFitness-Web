{% extends 'baseback.html.twig' %}
{% block title %}All Reservations{% endblock %}

{% block body %}
<section id="main-content" class="">
    <section class="wrapper main-wrapper" style=''>
        <div class='col-xl-12 col-lg-12 col-md-12 col-12'>
            <div class="page-title">
                <div class="float-left">
                    <h1 class="title">All Reservations</h1>
                </div>
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="col-xl-12">
            <section class="box ">
                <header class="panel_header">
                    <h2 class="title float-left">All Reservations</h2>
                </header>
                <div class="content-body">
                    {% for category, categoryReservations in reservationsByCategory %}
                    <h3>{{ category }}</h3>
                    <div class="row">
                        {% for reservation in categoryReservations %}
                        <div class="col-md-6 col-lg-4 col-xl-3">
                            <div class="team-member ">
                                <div class="team-info">
                                    <h4>Places: {{ reservation.places }}</h4>
                                    <span>ID: {{reservation.reservationID}}</span>
                                    <span>Date: {{ reservation.date }}</span>
                                    <span>Start Time: {{ reservation.startTime }}</span>
                                    <span>End Time: {{ reservation.endTime }}</span>
                                    <span>Status: {{ reservation.status }}</span>
                                    <span>Duration: {{ reservation.duration }}</span>
                                    <span>Pricing: {{ reservation.pricing }}</span>
                                    <!-- Add more reservation details as needed -->
                                    <a href="{{ path('app_edit', {'id':reservation.reservationid}) }}" class="btn btn-info">Edit</a>
                                    {{  include('reservation/delete_form.html.twig') }}
                                </div>
                            </div>
                        </div>
                        {% endfor %}
                    </div>
                    {% endfor %}
                </div>
            </section>
        </div>
    </section>
</section>
{% endblock %}
